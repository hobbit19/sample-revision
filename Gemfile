source 'http://rubygems.org'

gem 'rails', '3.1.3'

# MongoDB
gem 'mongoid'
gem 'bson_ext'

# I18n
gem 'rails-i18n'

gem 'heroku'

gem 'gravatar_image_tag'

group :development,:test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'rb-fsevent'
  gem 'growl'
  gem 'guard-rspec'
  gem 'guard-livereload'
  gem 'guard-spork'
  gem 'spork', '~> 0.9.0.rc'
end

# View
gem 'haml'
gem 'jquery-rails'
gem 'simple_form', :git => 'http://github.com/plataformatec/simple_form.git'
gem 'bootstrap-rails', :require => 'bootstrap-rails',
  :git => 'http://github.com/xdite/bootstrap-rails.git'

group :assets do
  gem 'sass-rails',   '~> 3.1.5'
  gem 'coffee-rails', '~> 3.1.1'
  gem 'uglifier', '>= 1.0.3'
end